1.
#pragma warning (disable: 4996)
#include<stdio.h>
int main() {
	int first_num, second_num;
	printf("첫 번째 정수: ");
	scanf("%d", &first_num);
	printf("두 번째 정수: ");
	scanf("%d", &second_num);
	printf("합: %d\n", first_num + second_num);	
	return 0;
}

2.
#pragma warning (disable: 4996)
#include<stdio.h>

int main() {
	double first_num, second_num;
	printf("첫 번째 수: ");
	scanf("%lf", &first_num);
	printf("두 번째 수: ");
	scanf("%lf", &second_num);
	printf("합: %lf\n", first_num + second_num);
	return 0;
}

3.
#pragma warning (disable: 4996)
#include<stdio.h>

int main() {
	int n;
	char m;
	printf("입력: ");
	scanf("%d", &n);
	m = n;
	printf("\n");
	printf("출력(int)->%d\n", n);
	printf("출력(char)->%d\n", m);
}

4.
#pragma warning (disable: 4996)
#include<stdio.h>

int main() {
	int n;
	unsigned char m;
	printf("입력: ");
	scanf("%d", &n);
	m = n;
	printf("\n");
	printf("출력(int)->%d\n", n);
	printf("출력(char)->%d\n", m);
}

5.
#pragma warning (disable: 4996)
#include<stdio.h>

int main() {
	printf("큰 따음표는 \"입니다.\n");
	printf("작은 따음표는 \'입니다.\n");
	printf("문자 A는 \'A\'입니다.\n");
	printf("큰 따음표의 이스케이프 시퀀스는 \\\"입니다.\n");
}

6.
#pragma warning (disable: 4996)
#include<stdio.h>

int main() {
	char ch;
	printf("문자형 입력(%%c) : ");
	scanf("%c", &ch);
	printf("문자로 출력(%%c): %c\n", ch);
	printf("정수로 출력(%%d): %d\n", ch - '0');
}

7-1.
#pragma warning (disable: 4996)
#include<stdio.h>

int main() {
	char ch;
	printf("소문자 입력: ");
	scanf("%c", &ch);
	printf("%c는 %d번째 영어 소문자", ch, ch - 'a');
}

7-2.
#pragma warning (disable: 4996)
#include<stdio.h>

int main() {
	int n;
	printf("정수 입력(0~25): ");
	scanf("%d", &n);
	printf("%d번째 영어 대문자는 %c\n", n, n + 'A');
}

7-3.
#pragma warning (disable: 4996)
#include<stdio.h>

int main() {
	char ch;
	printf("소문자 입력: ");
	scanf("%c", &ch);
	printf("대문자 출력: %c\n", ch - 'a' + 'A');
}

8.
#pragma warning (disable: 4996)
#include<stdio.h>

int main() {
	char ch;
	printf("대문자 입력: ");
	scanf("%c", &ch);
	printf("소문자 출력: %c\n", ch - 'A' + 'a');
}
